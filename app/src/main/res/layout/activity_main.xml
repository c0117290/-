<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/aviationButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/airport_img"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/hotelButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hotelButton"
        android:layout_width="277dp"
        android:layout_height="88dp"
        android:text="ホテル・お店"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/moveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/moveButton"
        android:layout_width="277dp"
        android:layout_height="95dp"
        android:layout_marginBottom="50dp"
        android:text="移動・観光"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="281dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/aviationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/start_button" />

</androidx.constraintlayout.widget.ConstraintLayout>